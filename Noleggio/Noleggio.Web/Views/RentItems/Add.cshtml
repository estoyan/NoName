@using Noleggio.Web.Models
@using Noleggio.DtoModels

@model RentItemsViewModel
<h1> Добави Обява</h1>
<section id="contact" style="">
    <div class="container">
        <div class="row">
            <div class="about_our_company" style="margin-bottom: 20px;">
                <h1 style="color:#fff;">Write Your Message</h1>
                <div class="titleline-icon"></div>
                <p style="color:#fff;">Lorem Ipsum is simply dummy text of the printing and typesetting </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
            @using (Html.BeginForm("Add", "RentItems", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                    <div class="row">
                    
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.ValidationMessage("Name", new { @class = "text-danger" })
                                @Html.LabelFor(m => m.Rentitem.Name, new { @class = "col-md-2 control-label" })
                                    @Html.TextBoxFor(m => m.Rentitem.Name, new { @class = "form-control", placeholder = "hui" })
                                    @*<p class="help-block text-danger"></p>*@
                                    </div>
                                </div>
                            <div class="form-group">
                                @Html.ValidationMessage("Location", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Rentitem.Location, new { @class = "form-control" } )
                                @*<p class="help-block text-danger"></p>*@
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessage("Description", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Rentitem.Description, new { @class = "form-control" })
                                @*<p class="help-block text-danger"></p>*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Rentitem.CategoryId, new SelectList(ViewBag.MainCategories, "Id", "Name"));
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl get">Send Message</button>
                        </div>
                    @*</div>*@
            }
            </div>
            @*<div class="col-md-4">
                <p style="color:#fff;">
                    <strong><i class="fa fa-map-marker"></i> Address</strong><br>
                    1216/Mirpur_10 Beach, Dhaka(Bangladesh)
                </p>
                <p style="color:#fff;">
                    <strong><i class="fa fa-phone"></i> Phone Number</strong><br>
                    (+8801)7123456
                </p>
                <p style="color:#fff;">
                    <strong><i class="fa fa-envelope"></i>  Email Address</strong><br>
                    Email@info.com
                </p>
                <p></p>
            </div>
        </div>*@
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
