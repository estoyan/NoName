@using Noleggio.Web.Models
@*@using System*@

@model RentItemsViewModel
@Styles.Render("~/bundles/jqueryUi_css")

<h1> Добави Обява</h1>
<section id="contact" style="">
    <div class="container">
        @*  <div class="row">*@
        @using (Html.BeginForm("Add", "RentItems", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessage("Name", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.RentItem.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.RentItem.Name) })
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessage("Description", new { @class = "text-danger" })
                        @Html.TextAreaFor(m => m.RentItem.Description, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.RentItem.Description) })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessage("Location", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.RentItem.Location, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.RentItem.Location) })
                    </div>
                    <div class="form-group row">
                        @Html.JQueryUI().SelectmenuFor(m => m.RentItem.CategoryId, new SelectList(ViewBag.MainCategories, "ID", "Name"), new { @class = "col-md-4" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row-fluid">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.RentItem.AvailableFrom)
                        </div>
                        <div class="col-md-6 form-group">
                            @Html.JQueryUI().DatepickerFor(m => m.RentItem.AvailableFrom, new { @class = "form-control" }).MinDate(DateTime.Now)
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.RentItem.AvailableTo)
                        </div>
                        <div class="col-md-6 form-group">
                            @Html.JQueryUI().DatepickerFor(m => m.RentItem.AvailableTo, new { @class = "form-control" })
                        </div>
                        <div class="row-fluid">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.RentItem.Price)
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.TextBoxFor(m => m.RentItem.Price, new { @class = "form-control" })
                            </div>
                            </div>
                        </div>
                </div>
            </div>
            <div class="row">
              Добави Картинки  <input type="file" name="Image"  multiple/>
            </div>
                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <button type="submit" class="btn btn-xl btn-primary">Добави</button>
                    </div>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
