@*@{
        ViewBag.Title = "RentItem";
    }*@
@using Noleggio.DtoModels.RentItems
@model RentItemDetaildDtoModel

@Styles.Render("~/bundles/jqueryUi_css")


<div class="row">
    <div class="col-md-4">
        @*kartinka*@
        <img src="@Model.Images" alt="Alternate Text"  width="100" height="100"/>
    </div>
    <div class="col-md-6">
        <div class="row-fluid">
            <div class="col-md-8">
                <h5>@Model.Price лв.</h5>
            </div>
        </div>
        <div class="row-fluid">
            @Html.JQueryUI().DatepickerFor(m => m.AvailableFrom, DateTime.Today.AddDays(7)).Inline(true)
        </div>
        <div class="row-fluid">
            @Html.JQueryUI().DatepickerFor(m => m.AvailableTo, DateTime.Today.AddDays(7)).Inline(true)
        </div>
    </div>
</div>
<h3>@Model.Name</h3>

<div>@Model.Category.Name</div>
<div>@Model.Description</div>
<div>@Model.Location</div>
<div>@Model.Owner.FirstName</div>
@foreach (var comment in @Model.Comments)
{
    <div>@comment.Description</div>

}

